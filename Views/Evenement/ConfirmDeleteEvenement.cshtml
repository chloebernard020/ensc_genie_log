@model Evenement

@{
    ViewData["Title"] = "ConfirmDelete";
}
<div class="card text-center">
    <div class="card-header">
        Attention !
    </div>
    <div class="card-body">
        <h5 class="card-title">Confirmation de la suppression de @Model.Nom</h5>
        <p class="card-text">Vous êtes sur le point de supprimer @Model.Nom, une fois supprimé, cet événement sera annulé </p>
        <div class="row mt-5">
            <div class="col">

                <form asp-action="Details" method="post">

                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="Annuler la suppression" class="btn btn-success" />

                </form>
            </div>
            <div class="col">
                <form asp-action="DeleteEvenement" method="post">

                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="Supprimer" class="btn btn-danger" />

                </form>
            </div>

        </div>


    </div>
</div>