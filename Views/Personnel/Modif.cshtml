@model Personnel

<h2>Modification du personnel @Model.Nom</h2>
<div class="mt-3">
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-success mb-5">Annuler la modification</a>

</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Modif">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group mb-2">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" value="@Model.Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" value="@Model.Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Metier" class="control-label"></label>
                <select asp-for="Metier" value="@Model.Metier" class="form-select"
                    asp-items="ViewBag.ListeMetiers"></select>
                <span asp-validation-for="Metier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialisation" class="control-label"></label>
                <select asp-for="Specialisation" value="@Model.Specialisation" class="form-select"
                    asp-items="ViewBag.ListeTypes"></select>
                <span asp-validation-for="Specialisation" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Modifier personnel" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>