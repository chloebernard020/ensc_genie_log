@model Lieu
<h2>Modification du parc @Model.Nom</h2>
<div class="mt-3">
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-success mb-5">Annuler la modification</a>

</div>

<div class="row">
    <div class="col-md-5">
        <form asp-action="Modif">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" value="@Model.Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" value="@Model.Type" class="form-control" disabled />
                <p class="xx-small text-danger">Vous ne pouvez plus modifier le type d'un parc après l'avoir créé</p>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Modifier le parc" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>